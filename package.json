{
  "name": "voicenote-comment",
  "displayName": "Voice Note Comment",
  "description": "Add sharable voice notes directly to your code as comments.",
  "version": "1.1.0",
  "icon": "images/icon.png",
  "publisher": "AnozieChibuike",
  "repository": {
    "type": "git",
    "url": "https://github.com/AnozieChibuike/VoicenoteComment.git"
  },
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "voicenote.startRecording",
        "title": "VoiceNote: Start Recording Comment"
      },
      {
        "command": "voicenote.playback",
        "title": "VoiceNote: Play Comment (Internal)"
      },
      {
        "command": "voicenote.deleteNote",
        "title": "Delete Voice Note",
        "icon": "$(trash)"
      },
      {
        "command": "voicenote.deleteAllNotes",
        "title": "Delete All Voice Notes",
        "icon": "$(trash)"
      },
      {
        "command": "voicenote.refreshList",
        "title": "Refresh Voice Notes",
        "icon": "$(refresh)"
      },
      {
        "command": "voicenote.switchStorage",
        "title": "Switch Storage Method",
        "icon": "$(database)"
      },
      {
        "command": "voicenote.configureCloudinary",
        "title": "Configure Cloudinary",
        "icon": "$(settings-gear)"
      },
      {
        "command": "voicenote.setAuthor",
        "title": "Set Voice Note Author",
        "icon": "$(person)"
      }
    ],
    "keybindings": [
      {
        "command": "voicenote.startRecording",
        "key": "alt+v",
        "mac": "alt+v",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "voicenote.startRecording",
          "group": "navigation",
          "when": "editorTextFocus"
        }
      ],
      "view/item/context": [
        {
          "command": "voicenote.deleteNote",
          "when": "view == voicenoteList && viewItem == note",
          "group": "inline"
        }
      ],
      "view/title": [
        {
          "command": "voicenote.refreshList",
          "when": "view == voicenoteList",
          "group": "navigation"
        },
        {
          "command": "voicenote.switchStorage",
          "when": "view == voicenoteList",
          "group": "navigation"
        },
        {
          "command": "voicenote.configureCloudinary",
          "when": "view == voicenoteList",
          "group": "navigation"
        },
        {
          "command": "voicenote.deleteAllNotes",
          "when": "view == voicenoteList",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "voicenote-explorer",
          "title": "Voice Notes",
          "icon": "$(mic)"
        }
      ]
    },
    "views": {
      "voicenote-explorer": [
        {
          "id": "voicenoteList",
          "name": "All Voice Notes"
        }
      ]
    },
    "configuration": {
      "title": "Voice Note Comment",
      "properties": {
        "voicenote.cloudinary.cloudName": {
          "type": "string",
          "default": "",
          "description": "Cloudinary Cloud Name"
        },
        "voicenote.cloudinary.apiKey": {
          "type": "string",
          "default": "",
          "description": "Cloudinary API Key"
        },
        "voicenote.cloudinary.apiSecret": {
          "type": "string",
          "default": "",
          "description": "Cloudinary API Secret"
        },
        "voicenote.cloudinary.uploadPreset": {
          "type": "string",
          "default": "",
          "description": "Cloudinary Upload Preset (Optional)"
        },
        "voicenote.storageMethod": {
          "type": "string",
          "enum": [
            "local",
            "cloudinary"
          ],
          "default": "local",
          "description": "Where to store the audio files."
        },
        "voicenote.cacheOnlineAudio": {
          "type": "boolean",
          "default": true,
          "description": "If true, downloaded audio files will be cached locally to avoid re-downloading."
        },
        "voicenote.author": {
          "type": "string",
          "default": "",
          "description": "The name of the author for voice notes."
        }
      }
    }
  },
  "devDependencies": {
    "@types/vscode": "^1.84.0"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "echo 'No compilation needed for pure JS'",
    "watch": "echo 'No watch script needed for pure JS'"
  },
  "dependencies": {
    "cloudinary": "^2.8.0"
  }
}
